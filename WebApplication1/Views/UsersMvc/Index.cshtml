@model IEnumerable<WebApplication1.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Utilizadores</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID_do_Grupo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_do_Grupo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID_do_User">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID_do_User">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID_do_User">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
