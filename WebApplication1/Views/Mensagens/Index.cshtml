@model IEnumerable<WebApplication1.Models.Mensagem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Conteudo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data_e_Hora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remetente)
